<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/bg_gradient_sky">

    <!-- Поиск с полупрозрачностью -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="#80FFFFFF"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#20FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            app:queryHint="Введите город"
            app:iconifiedByDefault="false" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Заголовок с городом -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Москва, Россия"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        android:layout_marginTop="16dp"/>

    <!-- Текущая дата -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29 мая, четверг"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location"/>

    <!-- Основная погодная информация -->
    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentDate"
        android:layout_marginTop="8dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19°"
        android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
        android:textColor="#FFFFFF"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/weatherIcon"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/weatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Солнечно"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temperature"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/feelsLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ощущается как 25°C"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherCondition"/>

    <!-- Блок минимальной/максимальной температуры -->
    <LinearLayout
        android:id="@+id/minMaxTempRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feelsLike">

        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/tempm"
            android:tint="?attr/colorError"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tempMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28°"
            android:textColor="?attr/colorError"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:background="#80FFFFFF" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/trace_2"
            android:layout_marginEnd="4dp"
            app:tint="#00BBFF" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tempMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18°"
            android:textColor="#00C5FF"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    </LinearLayout>

    <!-- Группировка прогноза и карточек внизу экрана -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minMaxTempRow">

        <!-- Блок прогноза погоды -->
        <LinearLayout
            android:id="@+id/weatherForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Прогноз на сегодня -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сейчас"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        app:tint="#FFFFFF"
                        android:src="@drawable/ic_sunny"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="19°"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Прогноз на 3 часа -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:00"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        app:tint="#FFFFFF"
                        android:src="@drawable/ic_sunny"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="20°"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Прогноз на 6 часов -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:00"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        app:tint="#FFFFFF"
                        android:src="@drawable/ic_partly_cloudy"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="18°"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Прогноз на 9 часов -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21:00"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        app:tint="#FFFFFF"
                        android:src="@drawable/ic_night"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="16°"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Карточки с деталями погоды -->
        <LinearLayout
            android:id="@+id/cardsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:baselineAligned="false">

            <!-- Карточка влажности -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/water_drop_24px"
                        app:tint="#FFFFFF" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Влажность"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка ветра -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/wind_icon"
                        app:tint="#FFFFFF"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ветер"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.5 м/с"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Карточка давления -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#80FFFFFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#20FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/compress_24px"
                        app:tint="#FFFFFF"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Давление"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/pressureValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1013 hPa"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>